<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <include layout="@layout/page_title" />
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/main_green_bg"
        >

        <com.youqd.kind.ckind.widget.RateTextCircularProgressBar
            android:id="@+id/kql_jindu"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/date_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="12月23日"
            android:layout_centerHorizontal="true"
            android:textColor="#FFF"
            android:layout_marginTop="60dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="出勤率"
            android:layout_centerHorizontal="true"
            android:textColor="#FFF"
            android:layout_marginTop="130dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="本周出勤率98%"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:visibility="gone"
            android:textColor="#FFF"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="本月出勤率98%"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="10dp"
            android:visibility="gone"
            android:layout_marginRight="10dp"
            android:textColor="#FFF"
            />
    </RelativeLayout>
    <TextView
        android:id="@+id/date_top2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:text="12月23号未到校名单"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textColor="#BABABA"
        />
    <include layout="@layout/kql_item"/>
    <com.youqd.kind.ckind.widget.MyListView
        android:id="@+id/xuesheng_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="#BABABA"
        android:dividerHeight="1px"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:text="本周出勤率分析"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textColor="#BABABA"
        />
    <com.beiing.leafchart.LeafLineChart
        android:id="@+id/leaf_chart"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:visibility="visible"
        android:layout_margin="10dp"
        />

</LinearLayout>
</ScrollView>

</LinearLayout>