<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:background="@color/main_content_bg"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="110dp">

        <FrameLayout
            android:layout_width="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content">

            <View
                android:layout_width="1dp"
                android:layout_gravity="center"
                android:layout_height="match_parent"
                android:background="@color/main_h_bg"></View>

            <ImageView
                android:src="@drawable/icon_work_time"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:background="@drawable/bg_msgbox_receive_normal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
            <TextView
                android:text="第一节课"
                android:id="@+id/courseIndex"
                android:layout_weight="1"
                android:textSize="16dp"
                android:layout_marginLeft="10dp"
                android:textColor="#424242"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
                <TextView
                    android:text="美术"
                    android:id="@+id/courseName"
                    android:textSize="16dp"
                    android:textColor="#FCC184"
                    android:layout_marginRight="20dp"
                    android:layout_width="wrap_content"
                    android:layout_gravity="right"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:orientation="vertical"
                android:layout_gravity="right"
                >

                <TextView
                    android:text="美术美术美术美术美术美术"
                    android:id="@+id/userName"
                    android:textSize="10dp"
                    android:textColor="#424242"
                    android:layout_marginTop="5dp"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>