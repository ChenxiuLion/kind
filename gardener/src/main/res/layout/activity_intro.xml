<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <include layout="@layout/page_title" />

    <com.cosfund.library.refresh.PullToRefreshScrollView
        xmlns:ptr="http://schemas.android.com/apk/res-auto"
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/top_icon"
                android:layout_width="match_parent"
                android:layout_height="120px"
                android:layout_margin="10dp"
                android:src="@drawable/icon_record_pic" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/main_content_bg" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20px"
                android:text="校园简介"
                android:textColor="#424242"
                android:textSize="36px" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/main_content_bg" />

            <TextView
                android:id="@+id/kind_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10px"
                android:ellipsize="end"
                android:maxLines="6"
                android:text=""
                android:textColor="#424242"
                android:textSize="24px" />

            <TextView
                android:id="@+id/kind_info_all"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12px"
                android:text="阅读全文>>"
                android:textColor="@color/main_green_bg"
                android:textSize="22px" />

            <TextView
                android:id="@+id/intro_images_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20px"
                android:text="校园实景（17）"
                android:textColor="#424242"
                android:textSize="36px" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/main_content_bg" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/id_recyclerview_horizontal"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_centerVertical="true"
                android:scrollbars="none" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/main_h_bg"/>
            <TextView
                android:id="@+id/kind_add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:textColor="#424242"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/kind_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/themes_color"
                android:textSize="14sp" />

        </com.zhy.autolayout.AutoLinearLayout>
    </com.cosfund.library.refresh.PullToRefreshScrollView>
</com.zhy.autolayout.AutoLinearLayout>
