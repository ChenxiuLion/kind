<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:layout_marginBottom="80px"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="com.youqd.kind.ckind.activity.SeeActivity">
    <include layout="@layout/page_title" />

    <TextView
        android:id="@+id/content_no_data"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="本园暂时未开通此项服务。"
        android:textColor="#424242"
        android:textSize="18sp"
        android:gravity="center"
        android:visibility="gone"
        />
    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v4.view.ViewPager
            android:id="@+id/see_view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:id="@+id/page_lin"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:padding="20px"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            >

        </LinearLayout>
        <TextView
            android:id="@+id/see_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="我们的学校"
            android:textColor="@color/main_green_bg"
            android:textSize="36px"
            android:padding="20px"
            android:visibility="gone"
            android:layout_above="@+id/page_lin"
            android:gravity="center"
            />
    </com.zhy.autolayout.AutoRelativeLayout>
</com.zhy.autolayout.AutoLinearLayout>
