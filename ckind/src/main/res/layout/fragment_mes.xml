<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.youqd.kind.ckind.activity.SeeActivity">
    <com.zhy.autolayout.AutoFrameLayout
        android:layout_width="match_parent"
        android:layout_height="148px"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="@color/page_title"
        tools:context=".base.KingActivity">

        <com.zhy.autolayout.AutoFrameLayout
            android:id="@+id/base_back"
            android:layout_width="148px"
            android:layout_height="148px"
            android:layout_gravity="right"
            android:background="@color/page_title"
            >
            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/base_back_image"
                android:layout_width="148px"
                android:layout_height="148px"
                android:layout_gravity="bottom"
                android:gravity="bottom"
                android:background="@color/page_title"
                >

            </com.zhy.autolayout.AutoLinearLayout>
            <ImageView
                android:background="@drawable/icon_daynmic_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30px"
                android:layout_marginRight="30px"
                android:layout_gravity="right|bottom"

                />
        </com.zhy.autolayout.AutoFrameLayout>


        <TextView
            android:id="@+id/top_title"
            android:textSize="16dp"
            android:text="这是标题"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:layout_marginBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.zhy.autolayout.AutoFrameLayout>

    <com.cosfund.library.refresh.PullToRefreshScrollView
        android:id="@+id/pull_sc"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
        <LinearLayout
            android:id="@+id/xit_messge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="60dp"
                android:layout_margin="10dp"
                android:layout_height="60dp"
                android:src="@drawable/icon_messge_xit"
                />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="家园宝宝"
                    android:textSize="16sp"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/themes_color"

                    />
                <TextView
                    android:id="@+id/title_top_tv_cont"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#989898"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/title_top_tv_date"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:textSize="14sp"

                android:textColor="#989898"
                />
        </LinearLayout>
        <com.youqd.kind.ckind.widget.MyListView
            android:id="@+id/swipe_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:divider="#BABABA"
            android:dividerHeight="1px"/>

        </LinearLayout>
    </com.cosfund.library.refresh.PullToRefreshScrollView>



</com.zhy.autolayout.AutoLinearLayout>