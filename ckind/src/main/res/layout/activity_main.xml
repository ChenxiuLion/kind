<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    tools:context=".activity.MainActivity"
    android:orientation="vertical">
    <View
        android:layout_width="match_parent"
        android:layout_height="60px"
        android:background="#00A57C"/>
    <TextView
        android:id="@+id/kind_name"
        android:textColor="@color/white"
        android:textSize="35px"
        android:text="加载中"
        android:gravity="center"
        android:background="#00A57C"
        android:layout_width="match_parent"
        android:layout_height="88px" />

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/info_top"
        android:background="#00A57C"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingBottom="32px">
        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35px"
            >
            <com.youqd.kind.ckind.util.CircleImageView
                android:src="@drawable/icon_defult_hard_bg"
                android:layout_width="195px"
                android:layout_height="195px"

                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                />
            <com.youqd.kind.ckind.util.CircleImageView
                android:id="@+id/main_image"
                android:layout_width="183px"
                android:layout_height="183px"

                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                />
        </com.zhy.autolayout.AutoRelativeLayout>

        <TextView
            android:id="@+id/baby_class_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="29px"
            android:textSize="36px"
            android:textColor="#ffffff"
            />
        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/showpoplin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/baby_name"
                android:text="加载中"
                android:textSize="36px"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                />
            <ImageView
                android:id="@+id/qiehuantv"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_marginLeft="20px"
                android:layout_toRightOf="@+id/baby_name"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_jiantou_1"
                android:layout_height="wrap_content" />
        </com.zhy.autolayout.AutoRelativeLayout>



    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_marginTop="40px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.zhy.autolayout.AutoFrameLayout
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.zhy.autolayout.AutoLinearLayout
                    android:id="@+id/main_schoolnew"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:onClick="onClick"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/main_item_image_1"
                        android:src="@drawable/main_item_icon_1"
                        android:layout_width="141px"
                        android:layout_height="141px" />
                    <TextView
                        android:text="校园新闻"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="28px"
                        android:layout_marginTop="14px"
                        android:textColor="#757575"

                        />
                </com.zhy.autolayout.AutoLinearLayout>
                <ImageView
                    android:id="@+id/main_item_h_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="35dp"
                    android:layout_marginTop="5dp"
                    android:visibility="gone"
                    android:src="@drawable/icon_defult_hongdian"
                    />
            </com.zhy.autolayout.AutoFrameLayout>

            <com.zhy.autolayout.AutoFrameLayout
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.zhy.autolayout.AutoLinearLayout
                    android:id="@+id/main_classnew"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:onClick="onClick"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/main_item_image_2"
                        android:src="@drawable/main_item_icon_2"
                        android:layout_width="141px"
                        android:layout_height="141px" />
                    <TextView
                        android:text="班级通知"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="28px"
                        android:layout_marginTop="14px"
                        android:textColor="#757575"
                        />
                </com.zhy.autolayout.AutoLinearLayout>
                <ImageView
                    android:id="@+id/main_item_h_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="35dp"
                    android:layout_marginTop="5dp"
                    android:visibility="gone"
                    android:src="@drawable/icon_defult_hongdian"
                    />
            </com.zhy.autolayout.AutoFrameLayout>


            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/main_work"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:onClick="onClick"
                android:orientation="vertical">
                <ImageView
                    android:src="@drawable/main_item_icon_3"
                    android:layout_width="141px"
                    android:layout_height="141px" />

                <TextView
                    android:text="宝宝考勤"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="28px"
                    android:layout_marginTop="14px"
                    android:textColor="#757575"
                    android:id="@+id/textView" />
            </com.zhy.autolayout.AutoLinearLayout>
        </com.zhy.autolayout.AutoLinearLayout>
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_marginTop="20px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/main_food"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:onClick="onClick"
                android:orientation="vertical">

                <ImageView
                    android:src="@drawable/main_item_icon_4"
                    android:layout_width="141px"
                    android:layout_height="141px" />
                <TextView
                    android:text="宝宝食谱"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="28px"
                    android:layout_marginTop="14px"
                    android:textColor="#757575"
                    />
            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/main_course"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:onClick="onClick"
                android:orientation="vertical">

                <ImageView
                    android:src="@drawable/main_item_icon_5"
                    android:layout_width="141px"
                    android:layout_height="141px" />
                <TextView
                    android:text="周教学计划"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="28px"
                    android:layout_marginTop="14px"
                    android:textColor="#757575"
                    />
            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/main_job"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:onClick="onClick"
                android:orientation="vertical">

                <ImageView
                    android:src="@drawable/main_item_icon_6"
                    android:layout_width="141px"
                    android:layout_height="141px" />
                <TextView
                    android:text="亲子作业"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="28px"
                    android:layout_marginTop="14px"
                    android:textColor="#757575"
                    />
            </com.zhy.autolayout.AutoLinearLayout>
        </com.zhy.autolayout.AutoLinearLayout>
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_marginTop="20px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/main_baby"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:onClick="onClick"
                android:orientation="vertical">

                <ImageView
                    android:src="@drawable/main_item_icon_9_se"
                    android:layout_width="141px"
                    android:layout_height="141px" />
                <TextView
                    android:text="家园动态"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="28px"
                    android:layout_marginTop="14px"
                    android:textColor="#757575"
                    />
            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/main_chat"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:onClick="onClick"
                android:orientation="vertical">

                <ImageView
                    android:src="@drawable/main_item_icon_8"
                    android:layout_width="141px"
                    android:layout_height="141px" />
                <TextView
                    android:text="给老师留言"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="28px"
                    android:layout_marginTop="14px"
                    android:textColor="#757575"
                    />
            </com.zhy.autolayout.AutoLinearLayout>



            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/bb_cj"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:onClick="onClick"
                android:orientation="vertical">

                <ImageView
                    android:src="@drawable/main_item_icon_7_se"
                    android:layout_width="141px"
                    android:layout_height="141px" />
                <TextView
                    android:text="宝宝晨检"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="28px"
                    android:layout_marginTop="14px"
                    android:textColor="#757575"
                    />
            </com.zhy.autolayout.AutoLinearLayout>
        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoLinearLayout>


</com.zhy.autolayout.AutoLinearLayout>
