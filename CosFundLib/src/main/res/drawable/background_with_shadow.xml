<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- bottom shadow -->
<item>
<shape android:shape="rectangle" >
    <!-- from top to bottom -->
    <gradient
        android:angle="90"
        android:centerColor="#fc3150"
        android:endColor="#fc3150"
        android:startColor="#fc3150" />
</shape>
</item>

    <!-- content -->
<item android:bottom="10dp">
<shape android:shape="ring" >
    <solid android:color="#fc3150" />
</shape>
</item>
    </layer-list>